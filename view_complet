CREATE OR REPLACE VIEW complet AS
SELECT joueurs.id AS id,prenom, joueurs.nom AS nom, pays, joueurs.sexe AS sexe, age, 
	epreuve.nom AS epreuve, epreuve.sexe AS s, sport.nom AS sport, rencontres.intitule AS rencontre, rencontres.date AS date, lieu.nom AS lieu, resultat.id AS resultat,
	resultat.position AS position, resultat.temps AS temps, resultat.points AS points
FROM joueurs, resultat, epreuve, sport, lieu, rencontres, joueurs_resultat 
WHERE (joueurs.id = joueurs_resultat.joueurs AND joueurs_resultat.resultat = resultat.id) 
	AND (resultat.epreuve = epreuve.id) 
	AND (resultat.rencontres = rencontres.id)
	AND (epreuve.sport = sport.id)
	AND (epreuve.lieu = lieu.id);
